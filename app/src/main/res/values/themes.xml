<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Material_design" parent="Theme.Material3.DynamicColors.DayNight">
        <!-- Customize your light theme here. -->


        <item name="android:windowFullscreen">true</item>

        <item name="chipStyle">@style/MyChipStyle</item>
        <item name="textInputStyle">@style/MyTextInputLayout</item>
        <item name="bottomAppBarStyle">@style/MyBottomAppBarStyle</item>
        <item name="tabStyle">@style/MyTabStyle</item>
        <item name="floatingActionButtonStyle">@style/MyFloatingActionButtonStyle</item>
        <item name="bottomNavigationStyle">@style/MyBottomNavigationView</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>





    </style>

    <!--Main theme-->
    <style name="Theme.Material_design" parent="Base.Theme.Material_design">
        <item name="myColorMain">@color/my_color_main</item>
        <item name="myColorMain40Alfa">@color/my_color_main_40Alfa</item>
        <item name="myColorSecond">@color/my_color_second</item>
        <item name="myColorThird">@color/my_color_third</item>
    </style>

    <style name="SplashTheme" parent="Theme.Material_design">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="MyBottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">?myColorThird</item>
    </style>

    <style name="MyFloatingActionButtonStyle" parent="Widget.Material3.FloatingActionButton.Surface">
        <item name="backgroundTint">?myColorMain</item>
        <item name="tint">?myColorThird</item>
    </style>

    <style name="MyTabStyle" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorColor">?myColorMain</item>
    </style>

    <style name="MyBottomAppBarStyle" parent="Widget.Material3.BottomAppBar">
        <item name="backgroundTint">?myColorMain</item>
        <item name="navigationIconTint">?myColorThird</item>
    </style>

    <style name="MyShapeAppearanceSmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MyTextAppearanceBody2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/aladin</item>
        <item name="android:fontFamily">@font/aladin</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.0178571429</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">?myColorMain</item>
        <item name="boxStrokeColor">?myColorMain</item>
        <item name="helperTextTextColor">?myColorMain</item>
        <item name="counterTextColor">@drawable/my_selector_counter</item>
        <item name="counterOverflowTextColor">?attr/colorError</item>
    </style>


    <style name="MyChipStyle" parent="Widget.Material3.Chip.Suggestion">
        <item name="android:textColor">?myColorThird</item>
        <item name="chipBackgroundColor">@drawable/my_selector_chip</item>
        <item name="android:textAppearance">@style/MyTextAppearanceBody2</item>
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearanceSmallComponent</item>
    </style>

    <style name="MyRedTheme" parent="Base.Theme.Material_design">
        <item name="myColorMain">#CA2020</item>
        <item name="myColorMain40Alfa">#66CA2020</item>
        <item name="myColorSecond">#F67D7D</item>
        <item name="myColorThird">#FFD4D4</item>
    </style>

    <style name="MyPurpleTheme" parent="Base.Theme.Material_design">
        <item name="myColorMain">#9254B1</item>
        <item name="myColorMain40Alfa">#669254B1</item>
        <item name="myColorSecond">#E1C6FF</item>
        <item name="myColorThird">#F2E6FF</item>

    </style>

    <style name="MyGreenTheme" parent="Base.Theme.Material_design">
        <item name="myColorMain">#A6DA09</item>
        <item name="myColorMain40Alfa">#66A6DA09</item>
        <item name="myColorSecond">#CDFF93</item>
        <item name="myColorThird">#EDFFD7</item>

    </style>


</resources>